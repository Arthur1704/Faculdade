unit form;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    btnMensagem: TButton;
    edtNumero: TEdit;
    procedure btnMensagemClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure edtNumeroChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnMensagemClick(Sender: TObject);

var valor : integer;
begin

  valor := strToInt(edtNumero.Text);

  case valor of
    1 : ShowMessage('Valor 1');

    2 :
      begin
        ShowMessage('Valor 2');
        ShowMessage('Valor 2a');
      end;

      else
        ShowMessage('Valor nenhum Testado!!');
  end;




end;

procedure TForm1.edtNumeroChange(Sender: TObject);
begin
  if edtNumero.Text <> '' then
      btnMensagem.Enabled := True;
  else
      btnMensagem.Enabled := False;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
    btnMensagem.Enabled := False;

end;

end.
